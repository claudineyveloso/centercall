<div class="authentication-bg min-vh-100">
  <div class="bg-overlay bg-light"></div>
  <div class="container">
    <div class="d-flex flex-column min-vh-100 px-3 pt-4">
      <div class="row justify-content-center my-auto">
        <div class="col-md-8 col-lg-6 col-xl-5">
          <div class="mb-4 pb-1">
            <a href="/" class="d-block auth-logo">
            </a>
          </div>
          <div class="card">
            <div class="card-body p-4">
              <div class="text-center mt-2">
                <h5>Bem vindo(a)!</h5>
                <p class="text-muted">Faça login para continuar no CenterCall.</p>
              </div>
              <div class="p-2 mt-3">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="mb-1">
                    <div class="position-relative input-custom-icon">
                      <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", class: "form-control", placeholder: "Usuário", id: "user_name"  %>
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                      </svg>
                    </div>
                  </div>
                  <div class="mb-1">
                    <div class="position-relative auth-pass-inputgroup input-custom-icon">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock mt-2">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                      </svg>
                      <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> mínimo de caracteres)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "password-input", placeholder: "Senha" %>
                      <button type="button" class="btn btn-link position-absolute h-100 end-0 top-0" id="password-addon" data-controller="viewPassword" data-action="click->viewPassword#toggle">
                        <i class="mdi mdi-eye-outline font-size-18 text-muted"></i>
                      </button>
                    </div>
                  </div>
                  <div class="mt-3">
                    <%= f.submit "Entrar", class: "btn btn-primary w-100 waves-effect waves-light" %>
                  </div>
                  <div class="mt-3">
                    <%= render "devise/shared/links" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <!-- end col -->
      </div>
      <!-- end row -->
      <div class="row">
        <div class="col-lg-12">
          <div class="text-center p-4">
            <p>
              © 2023 CenterCall - Desenvolvido por AIC - Consultoria e Sistemas Ltda.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- end container -->
</div>
